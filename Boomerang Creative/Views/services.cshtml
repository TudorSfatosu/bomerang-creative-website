@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Services>
@using ContentModels = Umbraco.Web.PublishedModels;

@{
				/**/

				Layout = "Master.cshtml";
				var ServiceSectionNode = @Umbraco.Content(1412);
				var servicesSection = new ServicesSections(ServiceSectionNode);
				string ImagePath = @Model.BannerImage.Src + @Model.BannerImage.GetCropUrl("HeightXSmall") + "&quality=80";
				string ImageWidth = "";
}

<style>
	.simple-banner {
		background-image: url(@ImagePath);
	}
</style>

@foreach (var image in @Model.BannerImage.Crops.OrderBy(x => x.Width))
{
	ImagePath = @Model.BannerImage.Src + @Model.BannerImage.GetCropUrl(image.Alias) + "&quality=80";
	ImageWidth = image.Width.ToString() + "px";

	<style>
		@@media (min-width:  @ImageWidth) {
			.simple-banner {
				background-image: url(@ImagePath);
			}
		}
	</style>
}

<!-- Simple Banner for the Services Page -->
<section class="simple-banner-container">
	<div class="container-fluid simple-banner simple-banner--full-width simple-banner--full-height simple-banner--center text-center spotlight-container">
		<h1 class="verveine white-text">@Model.BannerTitle</h1>
		<div class="museo-sans-300 second-line m-auto w-50 white-text">
			@Model.BannerText
		</div>
		<div id="propellor" class="propellor"></div>
	</div>

</section>

@Html.Partial("ServicesSections")

